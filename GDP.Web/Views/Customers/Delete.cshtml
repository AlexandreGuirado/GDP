@model GDP.Domain.Entities.Customer
@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Você tem certeza que deseja excluir este cliente?</h3>
<div>
    <h4>Esta ação não pode ser desfeita.</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>