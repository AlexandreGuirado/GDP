@model IEnumerable<GDP.Domain.Entities.Customer>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Data de Cadastro</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Nenhum cliente encontrado.</td>
            </tr>
        }
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@item.RegistrationDate.ToShortDateString()</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Detalhes"><i class="fas fa-info-circle"></i></a>
                       
                        <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@item.Id" title="Excluir">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>